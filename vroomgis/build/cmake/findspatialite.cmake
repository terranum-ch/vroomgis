# Find Spatialite Library
# Created by Lucien Schreiber 
#
#  SPATIALITE_INCLUDE_DIR - where to find spatialite.h, etc.
#  SPATIALITE_LIBRARIES   - List of libraries when using Spatialite.

SET (SPATIALITE_PATH CACHE PATH "Path to the Spatialite library")


# SEARCHING HEADER
FIND_PATH (SPATIALITE_INCLUDE_DIR spatialite.h
  ${SPATIALITE_PATH}
  ${SPATIALITE_PATH}/include
  NO_DEFAULT_PATH)

IF(NOT SPATIALITE_INCLUDE_DIR)
  MESSAGE(FATAL_ERROR "spatialite.h file not found")
ENDIF(NOT SPATIALITE_INCLUDE_DIR)
INCLUDE_DIRECTORIES(${SPATIALITE_INCLUDE_DIR})

# SEARCHING LIBRARY
FIND_LIBRARY(SPATIALITE_LIBRARIES spatialite
  ${SPATIALITE_PATH}
  ${SPATIALITE_PATH}/lib
  NO_DEFAULT_PATH)

IF(NOT SPATIALITE_LIBRARIES)
  MESSAGE(FATAL_ERROR "Spatialite library not found")
ENDIF(NOT SPATIALITE_LIBRARIES)
MESSAGE("spatialite libraries : ${SPATIALITE_LIBRARIES}")
LINK_LIBRARIES(${SPATIALITE_LIBRARIES})
